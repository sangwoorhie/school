{
  "version": 2,
  "builds": [
    { "src": "api/handler.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/handler.ts" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; connect-src 'self' https://school-bhwx.vercel.app;"
        }
      ]
    }
  ]
}
